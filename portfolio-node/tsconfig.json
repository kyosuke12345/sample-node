{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "types": ["node", "@types/jest"],
    "paths": {
      "@app/libs": ["libs/libs/src"],
      "@app/libs/*": ["libs/libs/src/*"],
      "@app": ["src"],
      "@app/*": ["src/*"]
    }
  }
}
